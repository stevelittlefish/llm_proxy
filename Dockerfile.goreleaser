# GoReleaser-specific Dockerfile
# This uses the pre-built binary from GoReleaser instead of building from source
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    libsqlite3-0 \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy the pre-built binary from GoReleaser's build context
COPY llm_proxy .

# Create directories for data and config
RUN mkdir -p /app/data /app/config

# Expose the default Ollama port
EXPOSE 11434

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:11434/health || exit 1

# Run the application
ENTRYPOINT ["/app/llm_proxy"]
CMD ["-config", "/app/config/config.json"]
